@model TestWebsite.Models.BrowseProjectModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ViewProject</title>
</head>
<body>
    <style type="text/css">
        body {
            margin: 0;
            padding: 0;
            border: 0;
            overflow: hidden;
            height: 100%;
            max-height: 100%;
        }

        .fill-container {
            width: 100%;
            height: 100%;
            overflow: scroll;
        }

        .directory-browser {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            width: 20%;
            height: 100%;
            overflow: hidden;
        }

        .source-viewer {
            position: fixed;
            top: 0; 
            left: 20%;
            right: 0;
            bottom: 0;
            overflow: auto; 
        }

    </style>

    <div class="directory-browser">
        <iframe id="directory" class="fill-container" src="@Model.DirectoryUrl" frameborder="0"></iframe>
    </div>
    <div class="source-viewer">
        <iframe id="source" class="fill-container" src="@Model.SourceUrl" frameborder="0"></iframe>
    </div>
</body>
</html>
